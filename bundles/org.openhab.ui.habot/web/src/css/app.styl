// app global css
body
    overflow-x hidden

// prevent the pull to refresh on Android Chrome
body.mobile.touch:not(.platform-ios)
    width 100%
    height 100%
    position absolute
    top 0
    z-index 1
    margin 0
    padding 0
    overflow-y hidden

    #q-app
        width 100%
        height 100%
        position absolute
        top 0
        z-index 2
        margin 0
        padding 0
        overflow-y auto

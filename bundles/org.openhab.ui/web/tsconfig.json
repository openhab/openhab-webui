{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noUnusedLocals": false,    // must set to false to allow unused variables in .vue files, which is common when using the composition API
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["audioworklet", "vite/client"]
  },
  "include": [
    "env.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
}
